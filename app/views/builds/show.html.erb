    <div class="row build">
      <div class="small-12 columns">
        <h2>
          <%= link_to @repo.full_name, repositories_show_path(@repo) %>
        </h2>
        <div class="row">
          <div class="small-6 columns">
            <div class="small-3 columns title">
              Author:
            </div>
            <div class="small-9 columns">
              <%= link_to_author(@build.author, @build.author_url, @build.author_avatar) %>
            </div>
          </div>

          <div class="small-6 columns">
            <div class="small-3 columns title">
              Branch: 
            </div>
            <div class="small-9 columns">
              <%= @build.branch %>
            </div>
          </div>


        </div>
        
        <div class="row">

          <div class="small-6 columns">
            <div class="small-3 columns title">
              Status:
            </div>
            <div class="small-9 columns">
              <%= @build.status.capitalize %>
            </div>
          </div>

          <div class="small-6 columns">
            <div class="small-3 columns title">
              Commit:
            </div>
            <div class="small-9 columns">
              <%= link_to limit_string(@build.commit, 16) << "...", @build.commit_url, target: '_blank' %>
            </div>
          </div>
 
        </div>

        <div class="row">

          <div class="small-6 columns">
            <div class="small-3 columns title">
              Started:
            </div>
            <div class="small-9 columns">
              <%= @build.started_at %>
            </div>
          </div>

          <div class="small-6 columns">
            <div class="small-3 columns title">
              Ended:
            </div>
            <div class="small-9 columns">
              <%= @build.ended_at %>
            </div>
          </div>
 
        </div>


        <div class="row">
          <div class="small-12 columns">
            <br/>
            <br/>
            <b>Commit Log: </b>
            <br/>
            <%= @build.message %>
          </div>
        </div>

        <%= render('build_diff', diff: @diff) if @diff %>
        <%= render('failure_message', message: @build.error) if @build.error %>

        <hr>

        <div class="row">
          <div class="small-12 columns">
            <h3> Assets </h3>
          <div>
        </div>
        <%= render('builds/assets', assets: @assets) %> 
      </div>
    </div>

