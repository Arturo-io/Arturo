              <tr class="repository">
                <td class="name">
                  <%= repository_link(@following, repository) %> 
                </td>
              <td class="description">
                <%= repository.description %>
              </td>
              <td class="hooks">
                <a href="https://www.github.com/<%= repository.full_name %>/settings/hooks" target="_blank">
                  <%= fa_icon('wrench') %>
                </a>
              </td>
              <td class="visibility">
                <%= repository.private ? fa_icon('eye-slash', title: "Private") : fa_icon('eye', class: 'fade', title: "Public")%>
              </td>
 
              <td class="toggle">
                <%= following_link(@following, repository) %>
              </td>
            </tr>

