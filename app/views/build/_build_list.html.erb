    <div class="row builds">
      <div class="small-12 columns">
        <table>
          <thead>
            <tr>
              <th>Build</th>
              <th>Branch</th>
              <th>Commit</th>
              <th>Message</th>
              <th>Author</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody class="body">
          <% @builds.each do |build| %> 
            <%= render 'build/build_list_single', build: build %>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="small-6 small-centered columns">
        <%= paginate @builds %>
      </div>
    </div>


    <script type="text/javascript"<>
      $(document).ready(function(){
        var pusher  = new Pusher("<%= pusher_key %>");
        var channel = pusher.subscribe('<%= @pusher_channel %>');
        channel.bind('new', function(template) {
          var $el = $(".builds .body").prepend(template);
        });

        channel.bind('status_update', function(data) {
          var $el       = $(".build#" + data.id + " .status"),
              cssClass  = data.css_class,
              newStatus = data.status;
          $el.removeClass()
           .addClass("status")
           .addClass(cssClass)
           .html(newStatus);
        });
      });
    </script>
