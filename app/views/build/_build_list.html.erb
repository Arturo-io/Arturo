    <div class="row builds">
      <div class="small-12 columns">
        <table>
          <thead>
            <tr>
              <th>Repository</th>
              <th>Branch</th>
              <th>Commit</th>
              <th>Author</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
          <% @builds.each do |build| %> 
            <tr class="build" id="<%= build.id %>">
                <td class="name">
                  <%= link_to "#{build.repo.full_name} ##{build.id}", build_path(build) %>
                </td>
              <td class="branch"><%= build.branch %></td>
              <td class="commit"><%= build.commit %></td>
              <td class="author"><%= build.author %></td>
              <td class="status <%= build.status.downcase%>">
                <%= build.status %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="small-6 small-centered columns">
        <%= paginate @builds %>
      </div>
    </div>


    <script type="text/javascript"<>
      $(document).ready(function(){
        var pusher  = new Pusher("<%= Rails.configuration.pusher_key %>");
        var channel = pusher.subscribe('<%= @pusher_channel %>');
        channel.bind('status_update', function(data) {
          var $el       = $(".build#" + data.id + " .status"),
              newStatus = data.status;

          $el.removeClass()
            .addClass("status " + newStatus)
            .html(newStatus);
        });
      });
    </script>
