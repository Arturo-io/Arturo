<% cache do %>
  <header class="anon navigation contain-to-grid">
    <div class="row">
      <div class="small-6 left columns">
        <h1 id="title">Arturo</h1>
      </div>
      <div class="medium-6 show-for-medium-up right columns">
        <nav class="top-bar" data-topbar>
          <section class="top-bar-section">
            <%= render('shared/anon_links') %>
          </section>
        </nav>

      </div>
    </div>
  </header>


  <section class="information">
    <div class="row">
      <%= render "shared/flash" %>
      <div class="small-12 medium-7 columns">
        <h3 calss="subheading">Create your next book using Github</h3>
        <ul class="pros">
          <li>Eliminate the tedious manual build process</li>
          <li>Allow others to contribute with Pull Requests</li>
          <li>Build up-to-date books/diffs with every commit</li>
        </ul>
      </div>

      <div class="show-for-medium-up medium-5 columns">
        <%= image_tag 'screen.png' %>
      </div>
    </div>


    <div class="row auth-button">
      <div class="small-12">
        <a href="/auth/github" id="auth" class="button radius alert">
          Authorize With Github 
        </a>
      </div>
    </div>

  </section>

  <section class="moreinfo">
    <%= render 'features_first_row' %>
    <%= render 'features_second_row' %>
  </section>


  <section class="pricing">
    <div class="row">
      <div class="small-12 medium-4 columns pricing">
        <ul class="pricing-table">
          <li class="title">Open Source</li>
          <li class="price">Free</li>
          <li class="description">For public open source projects.</li>
          <li class="bullet-item">&infin; public repos</li>
          <li class="bullet-item">0 private repo</li>
          <li class="bullet-item">Public Builds</li>
          <li class="cta-button">
            <a class="button radius" href="/auth/github">Authorize</a>
          </li>
        </ul>
      </div>

      <div class="small-12 medium-4 columns pricing">
        <ul class="pricing-table">
          <li class="title">Solo</li>
          <li class="price">$4.99</li>
          <li class="description">For solo writers</li>
          <li class="bullet-item">&infin; public repos</li>
          <li class="bullet-item">1 private repo</li>
          <li class="bullet-item">Private Builds</li>
          <li class="cta-button">
          <a class="button radius" href="/auth/github">Select</a>
          </li>
        </ul>
      </div>

      <div class="small-12 medium-4 columns pricing">
        <ul class="pricing-table">
          <li class="title">Multi Pass</li>
          <li class="price">$19.99</li>
          <li class="description">For serial writers</li>
          <li class="bullet-item">&infin; public repos</li>
          <li class="bullet-item">10 private repos</li>
          <li class="bullet-item">Priority + Private builds</li>
          <li class="cta-button">
            <a class="button radius" href="/auth/github">Select</a>
          </li>
        </ul>
      </div>
    </div>
    <div class="row">
      <div class="small-6 medium-12 text-center small-center columns">
        <%= link_to "Contact us", "mailto:hello@arturo.io" %> for custom price plans
      </div>
    </div>
  </section>
<% end %>
